<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fitToWidth="true" fx:id="scrollPane" pannable="false" styleClass="profile-scroll" maxHeight="Infinity" VBox.vgrow="ALWAYS">
    <content>
        <VBox VBox.vgrow = "ALWAYS" maxHeight="Infinity">
        <Label fx:id="resultDisplay" alignment="TOP_LEFT"
               styleClass="result-display" wrapText="true" maxHeight="Infinity" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
        </VBox>
    </content>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</ScrollPane>